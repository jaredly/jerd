{
    "name": "@jerd/tooling",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Jared Forsyth <jared@jaredforsyth.com>",
    "license": "MIT",
    "scripts": {
        "prepare": "yarn build",
        "build": "yarn peg && yarn compile",
        "compile": "esbuild --bundle --external:@babel/core --external:@babel/types --loader:.jd=text src/main.ts --platform=node --outfile=main.js",
        "start": "node bootstrap.js ../language/src/typing/types.ts ../language/src/typing/auto-transform.ts",
        "sn": "jest -u"
    },
    "jest": {
        "snapshotSerializers": [
            "jest-snapshot-serializer-raw"
        ],
        "transform": {
            "\\.jd": "../language/jest-load-static.js",
            "\\.txt": "../language/jest-load-static.js",
            "\\.js$": "babel-jest",
            "\\.ts$": "babel-jest"
        }
    },
    "dependencies": {
        "@babel/generator": "^7.14.1",
        "@babel/traverse": "^7.12.13",
        "@babel/types": "^7.12.13",
        "esbuild": "^0.9.1",
        "fast-deep-equal": "^3.1.3",
        "fs": "^0.0.1-security",
        "hash-sum": "^2.0.0",
        "jest-snapshot-serializer-raw": "^1.1.0",
        "path": "^0.12.7",
        "prettier": "^2.2.1",
        "typescript": "^4.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.12.16",
        "@babel/preset-env": "^7.12.16",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.12.16",
        "@testing-library/dom": "^8.1.0",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/hash-sum": "^1.0.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.25",
        "@types/seedrandom": "^2.4.28",
        "babel-jest": "^26.6.3",
        "jest": "^27"
    }
}
