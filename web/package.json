{
    "name": "@jerd/web",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "build": "esbuild src/run.tsx --loader:.jd=text --bundle --define:process.env=\"{}\" --define:process.env.NODE_ENV=\\\"development\\\" --minify --sourcemap --platform=browser --outdir=../docs",
        "start": "esbuild src/run.tsx --loader:.jd=text --define:process.cwd=\"cwd\" --bundle --define:process.env=\"{}\" --define:process.env.NODE_ENV=\\\"development\\\" --sourcemap --platform=browser --servedir=. --outdir=. --serve=:4343 --external:fs --external:events --external:constants",
        "start-showcase": "esbuild src/openglShowcase.tsx --loader:.jd=text --define:process.cwd=\"cwd\" --bundle --define:process.env=\"{}\" --define:process.env.NODE_ENV=\\\"development\\\" --minify --sourcemap --platform=browser --servedir=../docs/showcase --outdir=../docs/showcase --serve=:4344 --external:fs --external:events --external:constants",
        "build-showcase": "esbuild src/openglShowcase.tsx --loader:.jd=text --define:process.cwd=\"cwd\" --bundle --define:process.env=\"{}\" --define:process.env.NODE_ENV=\\\"development\\\" --minify --sourcemap --platform=browser --outdir=../docs/showcase --external:fs --external:events --external:constants",
        "music": "node ../language/bootstrap.js prelude-types ../web/src/plugins/music/music-jd.ts ../web/src/plugins/music/music.jd",
        "canvas": "node ../language/bootstrap.js prelude-types ../web/src/plugins/canvas/canvas-jd.ts ../web/src/plugins/canvas/canvas.jd"
    },
    "dependencies": {
        "@emotion/react": "^11.1.5",
        "@jerd/language": "1.0.0",
        "buffer": "^6.0.3",
        "localforage": "^1.9.0",
        "react": "^17.0.1",
        "react-colorful": "^5.2.2",
        "react-dom": "^17.0.1",
        "react-textarea-autosize": "^8.3.2",
        "tinytar": "^0.1.0",
        "tone": "^14.7.77"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "jsdom",
        "snapshotSerializers": [
            "jest-snapshot-serializer-raw"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/jest-setup.js"
        ],
        "transform": {
            "\\.jd": "../language/jest-load-static.js",
            "\\.txt": "../language/jest-load-static.js",
            "\\.js$": "babel-jest",
            "\\.tsx?$": "babel-jest"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.14.8",
        "@babel/preset-env": "^7.14.8",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.14.5",
        "@babel/types": "^7.12.13",
        "@testing-library/dom": "^8.1.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.2",
        "babel-jest": "^27.0.6",
        "esbuild": "0.10.1",
        "jest": "^27.0.6"
    }
}
