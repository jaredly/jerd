{
    "name": "@jerd/language",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Jared Forsyth <jared@jaredforsyth.com>",
    "license": "MIT",
    "scripts": {
        "prepare": "yarn build",
        "build": "yarn peg && yarn compile",
        "compile": "esbuild --sourcemap --bundle src/main.ts --platform=node --outfile=main.js",
        "peg": "pegjs --plugin ts-pegjs -o src/parsing/grammar.ts src/parsing/grammar.pegjs",
        "peg-simple": "pegjs --plugin ts-pegjs -o src/simple-grammar.ts src/simple-grammar.pegjs",
        "watch-tests": "watchexec -w main.js -w examples -- node --enable-source-maps main.js --assert examples/*.jd --run --cache",
        "test": "node --enable-source-maps main.js --assert examples/*.jd --run",
        "watch": "esbuild --sourcemap --bundle src/main.ts --platform=node --watch --outfile=main.js",
        "sn": "jest -u"
    },
    "bin": {
        "jerd": "./main.js"
    },
    "jest": {
        "snapshotSerializers": [
            "jest-snapshot-serializer-raw"
        ],
        "transform": {
            "\\.jd": "./jest-load-static.js",
            "\\.js$": "babel-jest",
            "\\.ts$": "babel-jest"
        }
    },
    "dependencies": {
        "@babel/generator": "^7.12.15",
        "@babel/traverse": "^7.12.13",
        "@babel/types": "^7.12.13",
        "chalk": "^4.1.0",
        "esbuild": "^0.9.1",
        "fast-deep-equal": "^3.1.3",
        "hash-sum": "^2.0.0",
        "jest-snapshot-serializer-raw": "^1.1.0",
        "pegjs": "^0.10.0",
        "prettier": "^2.2.1",
        "rfdc": "^1.2.0",
        "seedrandom": "^3.0.5",
        "ts-pegjs": "^0.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.12.16",
        "@babel/preset-env": "^7.12.16",
        "@babel/preset-typescript": "^7.12.16",
        "@types/hash-sum": "^1.0.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.25",
        "@types/seedrandom": "^2.4.28",
        "babel-jest": "^26.6.3",
        "jest": "^26.6.3"
    }
}
