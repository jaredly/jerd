{
    "name": "@jerd/language",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Jared Forsyth <jared@jaredforsyth.com>",
    "license": "MIT",
    "scripts": {
        "prepare": "yarn build",
        "build": "yarn peg && yarn compile",
        "compile": "esbuild --sourcemap --bundle --loader:.jd=text src/main.ts --platform=node --outfile=main.js",
        "watch": "yarn run compile --watch",
        "cp-builtins": "cp src/printing/builtins.ts src/printing/builtins.ts.txt",
        "peg": "pegjs --plugin ts-pegjs -o src/parsing/grammar.ts src/parsing/grammar.pegjs",
        "watch-tests": "watchexec -w src -w examples -- node --enable-source-maps bootstrap.js --assert examples --run --cache",
        "watch-tests-old": "watchexec -w main.js -w examples -- node --enable-source-maps main.js --assert examples --run --cache",
        "watch-go": "watchexec    -w main.js -w examples -- node --enable-source-maps main.js go examples --run --assert",
        "ts-examples": "tsc --build examples/build/tsconfig.json",
        "test": "node --enable-source-maps main.js --assert examples --run",
        "test-one": "node --enable-source-maps bootstrap.js --assert --run",
        "watch-one": "watchexec -w src -w examples -i build -- node --enable-source-maps bootstrap.js --assert --run --cache",
        "watch-just-one": "node --enable-source-maps bootstrap.js watch --assert --run --cache",
        "sn": "jest -u"
    },
    "bin": {
        "jerd": "./main.js"
    },
    "jest": {
        "snapshotSerializers": [
            "jest-snapshot-serializer-raw"
        ],
        "transform": {
            "\\.jd": "./jest-load-static.js",
            "\\.js$": "babel-jest",
            "\\.ts$": "babel-jest"
        }
    },
    "dependencies": {
        "@babel/generator": "^7.14.1",
        "@babel/traverse": "^7.12.13",
        "@babel/types": "^7.12.13",
        "assert": "^2.0.0",
        "chalk": "^4.1.0",
        "esbuild": "^0.9.1",
        "fast-deep-equal": "^3.1.3",
        "fs": "^0.0.1-security",
        "hash-sum": "^2.0.0",
        "jest-snapshot-serializer-raw": "^1.1.0",
        "path": "^0.12.7",
        "pegjs": "^0.10.0",
        "prettier": "^2.2.1",
        "rfdc": "^1.2.0",
        "seedrandom": "^3.0.5",
        "ts-pegjs": "^0.3.1",
        "typescript": "^4.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.12.16",
        "@babel/preset-env": "^7.12.16",
        "@babel/preset-typescript": "^7.12.16",
        "@types/hash-sum": "^1.0.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.25",
        "@types/seedrandom": "^2.4.28",
        "babel-jest": "^26.6.3",
        "jest": "^26.6.3"
    }
}
